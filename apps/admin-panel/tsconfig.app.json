{
  "compilerOptions": {
    "outDir": "dist",
    "types": [
      "node"
    ],
    "lib": [
      "dom"
    ],
    "target": "es2022",
    "rootDir": "src",
    "tsBuildInfoFile": "dist/tsconfig.app.tsbuildinfo",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": false,
    "noUnusedLocals": false,
    "composite": false,
    "declaration": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
  },
  "include": [
    "src/**/*.ts",
  ],
  "files": [
    "src/main.ts",
  ],
  "exclude": [
    "out-tsc",
    "dist",
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "eslint.config.js",
    "eslint.config.cjs",
    "eslint.config.mjs"
  ],
}